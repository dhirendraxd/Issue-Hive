rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Issues collection
    match /issues/{issueId} {
      // Anyone can read issues
      allow read: if true;
      
      // Only authenticated users can create issues
      allow create: if isSignedIn() 
        && request.resource.data.keys().hasAll(['title', 'description', 'category', 'status', 'votes'])
        && request.resource.data.votes == 0
        && request.resource.data.status == 'received'
        && (request.resource.data.visibility in ['public','private','draft'] || !('visibility' in request.resource.data));
      
      // Authenticated users can update issues
      // Votes are now tracked separately in votes collection
      allow update: if isSignedIn() 
        && (
          // Status updates only
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']) 
           && request.resource.data.status in ['received', 'in_progress', 'resolved'])
          // Visibility updates (owner-only)
          || (isOwner(resource.data.createdBy) 
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['visibility', 'updatedAt'])
              && request.resource.data.visibility in ['public','private','draft'])
          // Resolution updates (owner-only) - includes status change to resolved
          || (isOwner(resource.data.createdBy) 
              && 'resolution' in request.resource.data 
              && request.resource.data.status == 'resolved'
              && request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'resolution'])
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'resolution', 'updatedAt']))
          // Progress updates (owner-only)
          || (isOwner(resource.data.createdBy) 
              && 'progressUpdates' in request.resource.data
              && request.resource.data.diff(resource.data).affectedKeys().hasAll(['progressUpdates'])
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['progressUpdates', 'hasRecentProgress', 'updatedAt']))
          // Vote count updates (system only via vote subcollection batch)
          || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['votes', 'updatedAt'])
        );
      
      // Only authenticated users can delete (or add ownership check)
      allow delete: if isSignedIn();
      
      // Votes subcollection - tracks individual user votes
      match /votes/{userId} {
        // Anyone can read votes to see who voted
        allow read: if true;
        
        // Users can only create/update their own vote
        // Can vote on issues they don't own, OR on anonymous issues (even if they own it)
        allow create, update: if isSignedIn() 
          && request.auth.uid == userId
          && (get(/databases/$(database)/documents/issues/$(issueId)).data.anonymous == true
              || get(/databases/$(database)/documents/issues/$(issueId)).data.createdBy != request.auth.uid)
          && request.resource.data.vote in [-1, 1];
        
        // Users can delete their own vote
        allow delete: if isSignedIn() && request.auth.uid == userId;
      }
    }
    
    // Users collection (for user profiles)
    match /users/{userId} {
      // Anyone can read user profiles
      allow read: if true;
      
      // Users can only write their own profile
      allow write: if isOwner(userId);
    }
    
    // Comments collection
    match /comments/{commentId} {
      // Anyone can read comments
      allow read: if true;
      
      // Only authenticated users can create comments
      // Limit to 2 top-level comments per user per issue (no parentId field)
      // Unlimited replies allowed (has parentId field)
      // Allow commenting on anonymous issues (including by creator)
      allow create: if isSignedIn()
        && request.resource.data.keys().hasAll(['issueId','userId','userName','content','createdAt','likes'])
        && request.resource.data.likes == 0
        && (
          // If issue is anonymous, anyone can comment
          get(/databases/$(database)/documents/issues/$(request.resource.data.issueId)).data.anonymous == true
          // If not anonymous, only non-owners can comment
          || get(/databases/$(database)/documents/issues/$(request.resource.data.issueId)).data.createdBy != request.auth.uid
        )
        && (
          // If it's a reply (has parentId), allow unlimited
          ('parentId' in request.resource.data && request.resource.data.parentId != null && request.resource.data.parentId != '')
          // If it's a top-level comment (no parentId or empty), client must verify count
          || !('parentId' in request.resource.data) || request.resource.data.parentId == null || request.resource.data.parentId == ''
        );
      
      // Users can update their own comments (for likes count updates)
      allow update: if isSignedIn() 
        && (resource.data.userId == request.auth.uid
            // Allow system to update likes count
            || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])));
      
      // Users can delete their own comments
      allow delete: if isSignedIn() 
        && resource.data.userId == request.auth.uid;
      
      // Comment likes subcollection - tracks individual user likes
      match /likes/{userId} {
        // Anyone can read likes to see who liked
        allow read: if true;
        
        // Users can only create/update/delete their own like
        allow create, update: if isSignedIn() && request.auth.uid == userId;
        allow delete: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }
}
